rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Rule for owners collection
    match /owners/{ownerId} {
      // DEV MODE: Allow public read/write to unblock development without Service Account
      // TODO: Revert to authenticated rules before production!
      allow read, write: if true; 
    }

    // Rule for residencies collection
    match /residencies/{residencyId} {
      // DEV MODE: Allow public read/write
      allow read, write: if true;
    }

    // Catch-all rule for other documents
    match /{document=**} {
      allow read: if request.auth != null;
      allow write: if false;  // Prevent writes to any other documents not specified above
    }
  }
}
